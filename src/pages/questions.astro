---
import AnchorNav from "../component/all-pages/anchor-nav.astro";
import Banner from "../component/all-pages/banner.astro";
import Layout from "../component/layouts/layout.astro";
import InformationQuestion from "../component/react/information-question";
const anchors = [
  { href: "#homologaciones", title: "HOMOLOGACIONES" },
  { href: "#pasantias", title: "PASANTIAS" },
  { href: "#cancelaciones", title: "CANCELACIONES" },
  { href: "#matricula", title: "MATRÍCULA" },
  { href: "#reingreso", title: "REINGRESO" },
  { href: "#modalidades", title: "MODALIDADES DE GRADO" },
];
---

<Layout pathname="/questions" title="Preguntas Frecuentes">
  <Banner title="ASPIRANTES" image="bg-banner-applicants" />
  <section class="grid grid-flow-row px-0 gap-8 lg:px-12">
    <InformationQuestion
      client:load
      title="¿Cómo puedo inscribirme en el programa de Ingeniería Electrónica y Telecomunicaciones de la Universidad del Cauca?"
    >
      Para inscribirte al programa de ingeniería electrónica y telecomunicaciones, debes estar pendiente de las fechas
      de admisión de la universidad del cauca, y seguir el paso a paso que se encuentra en el siguiente enlace.
    </InformationQuestion>
    <InformationQuestion
      client:load
      title="¿El programa de Ingeniería Electrónica y Telecomunicaciones tiene un límite de cupo?"
    >
      Respuesta
    </InformationQuestion>
    <InformationQuestion
      client:load
      title="¿Cuáles son las oportunidades de becas y ayuda financiera disponibles para estudiantes de esta carrera?"
    >
      Respuesta
    </InformationQuestion>
    <InformationQuestion
      client:load
      title="¿Es necesario tener una formación previa en matemáticas o física para ser aceptado en el programa?"
    >
      Respuesta
    </InformationQuestion>
    <InformationQuestion
      client:load
      title="¿ En caso de ser admitido qué documentos o certificados académicos se deben proporcionar como parte de la solicitud de admisión?"
    >
      Respuesta
    </InformationQuestion>
  </section>
  <Banner title="ESTUDIANTES" image="bg-banner-applicants" />
  <AnchorNav list={anchors}></AnchorNav>
  <section class="grid grid-flow-row px-0 gap-10 lg:px-12">
    <h3 id="homologaciones" >HOMOLOGACIONES</h3>
    <div class="grid grid-flow-row gap-8">
      <InformationQuestion client:load title="¿Cómo puedo solicitar una homologación?">Respuesta</InformationQuestion>
      <InformationQuestion client:load title="¿Cuáles son los requisitos para homologar una materia?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Cuánto tiempo tarda el proceso de homologación?">
        Respuesta
      </InformationQuestion>
    </div>
    <h3 id="pasantias" >PASANTIAS</h3>
    <div class="grid grid-flow-row gap-8">
      <InformationQuestion client:load title="¿Cuáles son los requisitos para realizar una pasantía?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Cuáles son los pasos para realizar una pasantía empresarial?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Cuánto tiempo dura una pasantía?">Respuesta</InformationQuestion>
    </div>

    <h3 id="cancelaciones" >CANCELACIONES</h3>
    <div class="grid grid-flow-row gap-8">
      <InformationQuestion client:load title="¿Qué debo hacer si quiero cancelar una materia?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Cuáles son los plazos para cancelar una materia?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Qué debo hacer si quiero cancelar semestre">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Cuáles son los plazos para cancelar semestre?">
        Respuesta
      </InformationQuestion>
    </div>
    <h3 id="matricula" >MATRICULA</h3>
    <div class="grid grid-flow-row gap-8">
      <InformationQuestion client:load title="¿Cuándo debo realizar la matrícula académica ?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion
        client:load
        title="¿Qué sucede si no realizo la matrícula académica en el plazo establecido?"
      >
        Respuesta
      </InformationQuestion>
      <InformationQuestion
        client:load
        title="¿Qué becas o exenciones ofrece la universidad para el pago de la matrícula?"
      >
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Cómo genero el recibo de matrícula financiera?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Cuáles son las formas de pago disponibles de la matrícula financiera?">
        Respuesta
      </InformationQuestion>
    </div>
    <h3 id="reingreso">REINGRESO</h3>
    <div class="grid grid-flow-row gap-8">
      <InformationQuestion
        client:load
        title="¿Qué debo hacer si quiero volver a la universidad después de haberme retirado?"
      >
        Respuesta
      </InformationQuestion>
      <InformationQuestion
        client:load
        title="¿Cuando puedo solicitar reingreso al programa de Ingeniería Electrónica y Telecomunicaciones ?"
      >
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Cuáles son los plazos para solicitar el reingreso?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Qué sucede si no solicito el reingreso dentro del plazo establecido?">
        Respuesta
      </InformationQuestion>
    </div>
    <h3 id="modalidades">MODALIDADES DE GRADO</h3>
    <div class="grid grid-flow-row gap-8">
      <InformationQuestion client:load title="¿Cuáles son las modalidades de grado que ofrece el programa?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Cuáles son los requisitos para cada modalidad de grado?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Cómo se elabora un convenio específico para práctica profesional?">
        Respuesta
      </InformationQuestion>
      <InformationQuestion client:load title="¿Puedo cambiar de modalidad de grado?">Respuesta</InformationQuestion>
      <InformationQuestion
        client:load
        title="¿Cuándo paso documentación para el anteproyecto de trabajo de grado y cuanto demora?"
      >
        Respuesta
      </InformationQuestion>
    </div>
  </section>
</Layout>
