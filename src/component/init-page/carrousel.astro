<script src="https://cdn.jsdelivr.net/npm/keen-slider@6.8.5/keen-slider.min.js"></script>
<script>
  import "keen-slider/keen-slider.min.css";
  import KeenSlider from "keen-slider";
  var animation = { duration: 30000, easing: (t) => t };
  let slider = new KeenSlider("#my-keen-slider", {
    loop: true,
    renderMode: "performance",
    drag: true,
    mode: "snap",
    slides: () => getSlidesConfig(),
    created(s) {
      s.moveToIdx(5, true, animation);
    },
    updated(s) {
      s.moveToIdx(s.track.details.abs + 5, true, animation);
    },
    animationEnded(s) {
      s.moveToIdx(s.track.details.abs + 5, true, animation);
    },
  });

  function getSlidesConfig() {
    if (window.matchMedia("(max-width: 767px)").matches) {
      // Tamaño de diapositivas para dispositivos móviles
      return [
        {
          size: 1,
        },
        {
          size: 1,
        },
        {
          size: 1,
        },
        {
          size: 1,
        },
        {
          size: 1,
        },
        {
          size: 1,
        },
        {
          size: 1,
        },
        {
          size: 1,
        },
        {
          size: 1,
        },
        {
          size: 1,
        },
      ];
    } else {
      // Tamaño de diapositivas para pantallas de escritorio
      return [
        {
          size: 0.35,
          spacing: 0.01,
        },
        {
          size: 0.35,
          spacing: 0.01,
        },
        {
          size: 0.35,
          spacing: 0.01,
        },
        {
          size: 0.35,
          spacing: 0.01,
        },
        {
          size: 0.35,
          spacing: 0.01,
        },
        {
          size: 0.35,
          spacing: 0.01,
        },
        {
          size: 0.35,
          spacing: 0.01,
        },
        {
          size: 0.35,
          spacing: 0.01,
        },
        {
          size: 0.35,
          spacing: 0.01,
        },
        {
          size: 0.35,
          spacing: 0.01,
        },
      ];
    }
  }

  // Actualizar las diapositivas cuando cambie el tamaño de la ventana
  window.addEventListener("resize", () => {
    slider.destroy();
    slider = new KeenSlider("#my-keen-slider", {
      mode: "snap",
      slides: () => getSlidesConfig(),
    });
  });
</script>
