---
import clsx from "clsx";

const { href, name } = Astro.props;

const pathname = Astro.url.pathname;

const isActive = href === pathname;
---

<a class="group relative hover:bg-gray-300 bg-gray-200 px-5 py-2" href={href}>
  <div
    class={clsx(
      "absolute h-1 bottom-0 left-0 right-0",
      isActive ? "bg-secondary-500" : "bg-gray-200",
      isActive ? "group-hover:bg-secondary-500" : "group-hover:bg-gray-300",
    )}
  >
  </div>
  <span class={clsx("text-lg", isActive ? "font-bold" : "font-medium")}>
    {name}
  </span>
</a>
