---
import clsx from "clsx";
const { title, path, reverse } = Astro.props;
---

<section class="border-4 border-primary-50 rounded-lg p-4 bg-primary-50 shadow-xl text-center">
  <div class="col-span-1 pb-4">
    <h5 class="text-primary-500 font-semibold lg:text-2xl md:text-lg ">{title}</h5>
  </div>
  <div class="box-content">
    <iframe
      class="w-full md:h-60 rounded-lg"
      src={path}
      title="YouTube video player"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen
    >
    </iframe>
  </div>
</section>
