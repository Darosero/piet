---
import clsx from "clsx";
import Button from "../all-pages/button.astro";
import Img from "../all-pages/img.astro";
import TextAncle from "../all-pages/text-anchor.astro";
const { title, reverse, image, path, text, isActive, alt,label } = Astro.props;
---

<div
  class={clsx(
    "flex justify-evenly gap-8 px-0 lg:px-12",
    reverse ? "flex-col lg:flex-row-reverse" : "flex-col lg:flex-row",
  )}
>
  <div class="flex flex-col gap-4 justify-center">
    <nav class="flex justify-center">
      <TextAncle path={path} isActive={isActive} title={title}></TextAncle>
    </nav>
    <p class="max-w-lg mx-auto">
      <slot />
    </p>
    <Button link={path} text={text} label={label}></Button>
  </div>
  <Img src={image} alt{alt}></Img>
</div>
